{% extends 'visitor/base_visitor.html.twig' %}
{% block title %}Gastronomy{% endblock %}
{% block css %}
  <link rel="stylesheet" type="text/css" href="/assets/gastroListStyle.css"/>
{% endblock %}
{% block body %}
  <!-------Banner Start------->
    <section class="banner" data-scroll-index='0'>
      <div class="banner-overlay">
        <div class="container">
          <div class="row">
            <div class="col-md-8 col-sm-12">
              <div class="banner-text">
                <h2 class="white">Welcome <b>gastronomy</b> section!</h2>
                <h5 class="banner-text white">Discover amazing places to enjoy a wonderful meal</h5>
              </div>
            </div>
            <div class="col-md-4 col-sm-12"> <img style="border-radius: 50%;" src="https://food.fnr.sndimg.com/content/dam/images/food/fullset/2022/08/19/WU3203-ree-drummond-crispy-everything-chicken-cutlets_4x3.jpg.rend.hgtvcom.616.462.suffix/1660928170362.jpeg" class="img-fluid wow fadeInUp"/> </div>
          </div>
        </div>
      </div>
      <span class="svg-wave"> <img class="svg-wave" src="images/wave.svg"> </span> 
    </section>

        <!-------FAQ Start------->
        <section class="faq section-padding prelative" data-scroll-index='4'>
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <div class="sectioner-header text-center">
                  <h3>Recently added</h3>
                  <span class="line"></span>
                </div>
                <div class="section-content text-center">
                  <div class="row">
                  {% for g in gastro %}
                    <div class="col-md-4 faq-content wow fadeInUp" data-wow-delay="0.2s">
                      <div class="card" style="width: 18rem;">
                        <div class="row">
                          <div class="col-md-4">
                            <img class="card-img-top" style="width: 10pc;" src="/{{g.logo ? g.logo : 'restaurant.svg'}}" alt="Card image cap">
                          </div>
                        <div class="col-md-8">
                          <div class="card-body">
                            <h5 class="card-title">{{g.name}}</h5>
                            <p class="card-text">{{g.desc}}</p>
                            <p class="card-text">{{g.date}}</p>
                            <a href="/gastronomia/{{g.id}}" style="text-decoration: none;" class="btn-grad text-uppercase">See more</a>
                          </div>
                        </div>
                        </div>
                      </div>
                    </div>
                  {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

{% endblock %}
