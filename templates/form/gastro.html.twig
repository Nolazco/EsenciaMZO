{% form_theme form 'form/beer_theme.html.twig'  %}
{{ form_start(form, { attr: { id: 'user_form' }}) }}
{% set logo = form.vars.value.logo is empty ? 'picture.svg' : form.vars.value.logo.getPathname() %}
{% set menu = form.vars.value.menu is empty ? 'document.svg' : form.vars.value.menu.getPathname() %} 
<div class="grid" style="display: flex; align-items: center; justify-content: center;"> {# Use Flexbox to center content #}
  <div class="s3">
    <a class="button transparent circle big">
      <img class="big small-elevate responsive" id="avatar_preview" src="/{{logo}}">
      {{ form_widget(form.logo, { attr: { accept: 'image/png,image/jpeg,image/gif' } }) }}
    </a>
    <a class="button transparent circle big">
      <img class="big small-elevate responsive" id="avatar_preview" src="/{{menu}}">
      {{ form_widget(form.menu, { attr: { accept: 'document/pdf' } }) }}
    </a>
  </div>
  <div class="s4">
    {{ form_row(form.name) }}
    {{ form_row(form.desc) }}
    {{ form_row(form.body, {textArea: true}) }}
    {{ form_row(form.delivery) }}
    {{ form_row(form.phone) }}
    {{ form_row(form.location) }}
    <div class="row">
      {{ form_widget(form.submit) }}
      <a class="button app-back fill">{{ 'action.back'|trans }}</a>
    </div>
  </div>
</div>
{{ form_end(form) }}
<script defer type="module">
  import { setup_preview } from '/assets/image_preview.js';
  const IMAGE_ELEMENT = document.getElementById('avatar_preview');
  const INPUT_ELEMENT = document.getElementById('gastro_form_logo');
  const FORM_ELEMENT = document.getElementById('gastro_form');

  setup_preview(INPUT_ELEMENT, IMAGE_ELEMENT);
  setup_passwcheck(FORM_ELEMENT);
</script>
